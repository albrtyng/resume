---
import { Image } from "astro:assets";

import Container from "@components/container.astro";
import { Hero } from "@components/Hero/Hero";
import { Navbar } from "@components/Navbar/Navbar";

import { LogoGrid } from "@components/LogoGrid/LogoGrid";
import { Contact } from "@components/Contact/Contact";

import Layout from "@layouts/Layout.astro";
import Experience from "@components/Experience/Experience.astro";

import astro from "@assets/logos/astro.svg";
import contentful from "@assets/logos/contentful.svg";
import heroImage from "@assets/images/hero.png";
import github from "@assets/logos/github.svg";
import graphql from "@assets/logos/graphql.svg";
import jenkins from "@assets/logos/jenkins.png";
import jira from "@assets/logos/jira.svg";
import nextjs from "@assets/logos/nextjs.svg";
import react from "@assets/logos/react.svg";
import typescript from "@assets/logos/typescript.svg";

import HeroSubtitle from "@components/Hero/HeroSubtitle.md";
---

<Layout title="Home">
  <Navbar client:load />
  <Container>
    <Hero client:load image={heroImage}>
      <!-- <Image slot="image" src={heroImage} alt="" aria-hidden /> -->
      <HeroSubtitle slot="subtitle" />
    </Hero>
  </Container>
  <LogoGrid
    client:load
    items={[
      astro.src,
      contentful.src,
      github.src,
      graphql.src,
      jenkins.src,
      jira.src,
      nextjs.src,
      react.src,
      typescript.src,
    ]}
  />
  <Experience />
  <Contact />
</Layout>
