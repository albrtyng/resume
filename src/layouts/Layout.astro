---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";

export interface Props {
  title: string;
}

// TODO: add screenshot of completed site
const resolvedImageWithDomain = new URL("/opengraph.jpg", Astro.url).toString();
const { title } = Astro.props;

import '../styles/index.scss'
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- TODO: add favicon -->
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://use.typekit.net/blg3xki.css">
    <SEO
      title={`${title}${title && " | "}Albert Yang`}
      description="Albert Yang is a Contentful certified front-end software developer"
      openGraph={{
        basic: {
          type: "website",
          title: `Albert Yang - front-end software developer`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Albert Yang Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
